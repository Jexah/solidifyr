doctype html
html(lang='en', ng-app='Solidifyr')
	head
		title= editor_project
		meta(charset='utf-8')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/angular-ui/0.4.0/angular-ui.min.css')
		link(rel='stylesheet', href='css/main.css')

	body
		div.container(ng-controller='TextEditorController', id='TextEditor')
			div.row
				div.col-md-12
					div.jumbotron.top-buffer(ng-repeat='project in database | filter: {type: "project"}')
						input(style='width:100%;outline:none;background-color:#EEE;border-style:none;font-size:72px;', type='text', ng-model='project.name')
						div(ng-repeat='class in project.children["class"]')
							input(style='width:100%;outline:none;background-color:#EEE;border-style:none;font-size:36px;', type='text' ng-model='database[class].name')
							div.top-buffer(ng-repeat='property in database[class].children["property"]')
								input(style='width:90%;outline:none;background-color:#EEE;border-style:none;font-size:22px;', type='text', ng-model='database[property].name')
								button(style='width:10%;float:right;', ng-click='delete(property);') Delete
								div.well
									div(ui-ace='{onLoad: aceLoaded, mode: "c_cpp"}', ng-model='database[property].text')
							button(ng-click='create("property", class);') Create Property
							hr(style='border-color:black;')
							div.top-buffer(ng-repeat='method in database[class].children["method"]')
								input(style='width:90%;outline:none;background-color:#EEE;border-style:none;font-size:22px;', type='text', ng-model='database[method].name')
								button(style='width:10%;float:right;', ng-click='delete(method);') Delete
								div.well
									div(style='padding:20px;', ui-ace='{onLoad: aceLoaded, mode: "c_cpp"}', ng-model='database[method].text')
							button(ng-click='create("method", class);') Create Method



		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular-resource.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular-route.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui/0.4.0/angular-ui.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.6/socket.io.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.0/ace.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.0/mode-c_cpp.js')

		script(src='js/main.min.js')